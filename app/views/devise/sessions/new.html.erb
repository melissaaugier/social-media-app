<div class="container-fluid vh-100 bg-custom-gradient">
  <div class="row h-100">
    <div class="position-relative col-12 col-md-6 d-flex flex-column align-items-center justify-content-center bg-white custom-rounded-end shadow">
      <div class="col-12 col-md-10 col-lg-8 p-4">
        <div class="text-center mb-4">
          <%= image_tag "logo-red.png", alt: 'logo focus', class: 'col-7 img-fluid p-4' %>
          <h2>Welcome back</h2>
          <p>Please enter your details.</p>
        </div>

        <%= form_for(resource, as: resource_name, url: new_user_session_path(resource_name), data: { turbo: true }, class: 'needs-validation') do |f| %>
          <div class="form-floating mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", id: 'floatingInput', class: 'form-control', placeholder: "name@example.com" %>
            <%= f.label :email, "Email", for: 'floatingInput' %>
            <div class="invalid-feedback">
              <%= resource.errors[:email].first %>
            </div>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, autocomplete: "current-password", id: 'floatingPassword', class: 'form-control', placeholder: "Password" %>
            <%= f.label :password, "Password", for: 'floatingPassword' %>
            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to new_password_path(resource_name), class: 'link-body-emphasis icon-link link-offset-2 link-underline-opacity-10 link-underline-opacity-100-hover mt-1' do %>
                <span>Forgot your password</span>
              <% end %>
            <% end %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check form-switch my-4">
              <%= f.check_box :remember_me, role: 'switch', class: 'form-check-input', id: 'rememberMeSwitch' %>
              <%= f.label :remember_me, class: 'form-check-label', for: 'rememberMeSwitch' %>
            </div>
          <% end %>

          <div class="d-grid gap-2 my-4">
            <%= f.submit "Sign in", class: 'btn btn-primary' %>
          </div>
        <% end %>

        <p class="text-center my-4">
          <span>Don't have an account? </span>
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'link-dark link-offset-2 link-underline-opacity-10 link-underline-opacity-100-hover' %>
        </p>
      </div>
    </div>
    <div class="col-5 col-md-6 d-none d-md-block d-md-flex flex-column align-items-end justify-content-end ">
      <%= image_tag "connexion.png", alt: 'image statues modernes se prenant en selfie', class: 'img-fluid', style: "max-width: 60%;" %>
    </div>
  </div>
</div>
