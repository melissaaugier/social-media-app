<div class="container-fluid vh-100 bg-custom-gradient">
  <div class="row h-100">
    <div class="position-relative col-12 col-md-6 d-flex flex-column align-items-center justify-content-center bg-white custom-rounded-end shadow">
      <div class="col-12 col-md-10 col-lg-8 p-4">
        <div class="text-center mb-4">
          <%= image_tag "logo-red.png", alt: 'logo focus', class: 'col-7 img-fluid p-4' %>
          <h2>Welcome</h2>
          <p>Please enter your details.</p>
        </div>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'needs-validation') do |f| %>
          <div class="row">
            <div class="col-6">
              <div class="form-floating mb-3">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", id: 'floatingName', class: 'form-control', placeholder: "John" %>
                <%= f.label :name, "Name", for: 'floatingName' %>
              </div>
            </div>

            <div class="col-6">
              <div class="form-floating mb-3">
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", id: 'floatingLastName', class: 'form-control', placeholder: "John" %>
                <%= f.label :last_name, "Last name", for: 'floatingLastName' %>
              </div>
            </div>
          </div>
          
          <div class="form-floating mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", id: 'floatingEmail', class: 'form-control', placeholder: "John" %>
            <%= f.label :email, "Email", for: 'floatingEmail' %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", id: 'floatingPassword', class: 'form-control', placeholder: "Password"  %>
            <%= f.label :password, "Password", for: 'floatingPassword' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", id: 'floatingPasswordConfirmation', class: 'form-control', placeholder: "Password" %>
            <%= f.label :password_confirmation, "Password confirmation", for: 'floatingPasswordConfirmation' %><br />
          </div>

          <div class="d-grid gap-2 my-4">
            <%= f.submit "Sign up", class: 'btn btn-primary' %>
          </div>
        <% end %>

        <p class="text-center my-4">
          <span>Already have an account? </span>
          <%= link_to "Sign in", new_session_path(resource_name), class: 'link-dark link-offset-2 link-underline-opacity-10 link-underline-opacity-100-hover' %>
        </p>
      </div>
    </div>
    <div class="col-5 col-md-6 d-none d-md-block d-md-flex flex-column align-items-end justify-content-end ">
      <%= image_tag "inscription.png", alt: 'image statues modernes se prenant en selfie', class: 'img-fluid', style: "max-width: 60%;" %>
    </div>
  </div>
</div>
